<Window x:Class="WPFTestMailSender.WpfMailSender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTestMailSender"
        mc:Ignorable="d"
        Title="Рассыльщик почты" Height="400" MinHeight="400" MinWidth="400">
    <DockPanel >
        <StackPanel Margin="10,10" DockPanel.Dock="Top">
            <WrapPanel Margin="0,0,0,10" Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock TextWrapping="Wrap" Text="Имя пользователя"/>
                <TextBox x:Name="UserNameEdit" TextWrapping="Wrap" Text="" MinWidth="150"/>
            </WrapPanel>
            <WrapPanel Margin="0,0,0,10" Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock TextWrapping="Wrap" Text="Пароль"/>
                <PasswordBox x:Name="PasswordEdit" Password="" MinWidth="150"/>
            </WrapPanel>
            <WrapPanel Margin="0,0,0,10" Orientation="Horizontal" HorizontalAlignment="Stretch">
                <TextBlock Margin="0,0,5,0" TextWrapping="Wrap" Text="Тема: "/>
                <TextBox x:Name="tbSubject" MinWidth="150" Text="{Binding Path=Subject, Mode=TwoWay}"/>
            </WrapPanel>
            <StackPanel Margin="0,0,0,10" HorizontalAlignment="Stretch" Orientation="Vertical">
                <TextBlock Margin="0,0,0,5" Text="Содержание письма:"></TextBlock>
                <TextBox MinLines="5" x:Name="tbBody" Text="{Binding Path=Body, Mode=TwoWay}"/>
            </StackPanel>
        </StackPanel>
        
        <WrapPanel Margin="0,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
            <Button Content="Отправить" 
                Height="50"
                Width="100"
                Click="ButtonSendMailOnClick">
            </Button>
        </WrapPanel>
        
    </DockPanel>
</Window>
